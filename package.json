{
  "name": "env-secrets",
  "version": "0.2.0",
  "description": "get secrets from a secrets vault and inject them into the running environment",
  "main": "index.js",
  "author": "Mark C Allen (@markcallen)",
  "repository": "markcallen/env-secrets",
  "homepage": "https://github.com/markcallen/env-secrets",
  "license": "MIT",
  "private": false,
  "scripts": {
    "prepare": "husky install",
    "build": "rimraf ./dist && tsc -b src",
    "start": "node dist/index.js",
    "postbuild": "chmod 755 ./dist/index.js",
    "lint": "eslint . --ext .ts,.js",
    "release": "release-it",
    "prettier:fix": "npx prettier --write .",
    "prettier:check": "npx prettier --check .",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest __tests__",
    "test:unit:coverage": "jest __tests__ --coverage",
    "test:e2e": "npm run build && jest --config jest.e2e.config.js",
    "test:e2e:debug": "npm run build && DEBUG=true jest --config jest.e2e.config.js"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/jest": "^29.5.14",
    "@types/node": "^18.19.124",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "aws-sdk-client-mock": "^3.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.2",
    "eslint-plugin-prettier": "^4.2.5",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "13.3.0",
    "prettier": "^2.8.8",
    "release-it": "^15.11.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.883.0",
    "@aws-sdk/client-sts": "^3.883.0",
    "@aws-sdk/credential-providers": "^3.883.0",
    "commander": "^9.5.0",
    "debug": "^4.4.1"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write .",
      "eslint --fix ."
    ],
    "*.{json,md,mdx,yaml,yml}": [
      "prettier --write ."
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "bin": {
    "env-secrets": "./dist/index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
